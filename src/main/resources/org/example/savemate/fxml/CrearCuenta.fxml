            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Banco" prefWidth="80"/>
                <TextField fx:id="campoBanco" promptText="Nombre del banco" />
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Saldo" prefWidth="80"/>
                <TextField fx:id="campoSaldo" promptText="Saldo inicial (â‚¬)" />
            </HBox>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Cancelar" onAction="#handleCancelar"/>
                <Button text="Crear" onAction="#handleCrear"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>